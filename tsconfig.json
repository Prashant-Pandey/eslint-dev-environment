{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES5",
    "outDir": "./js/",
    "rootDir": "ts",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./ts/**/*"]
}
